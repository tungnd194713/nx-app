# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build nx-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t nx-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system nx-api && \
          adduser --system -G nx-api nx-api

COPY dist/apps/nx-api nx-api
RUN chown -R nx-api:nx-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix nx-api --omit=dev -f install

CMD [ "node", "nx-api" ]
